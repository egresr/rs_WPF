        <Label x:Name="label_Copy" Content="Minuten" HorizontalAlignment="Left" Margin="210,84,0,0" VerticalAlignment="Top" Width="103" Height="25"/>
        <Label x:Name="label1_Copy" Content="Stunden" HorizontalAlignment="Left" Margin="210,148,0,0" VerticalAlignment="Top" Width="103" Height="25"/>
        <Label x:Name="label1" Content="Sekunden" HorizontalAlignment="Left" Margin="210,20,0,0" VerticalAlignment="Top" Width="119" Height="25"/>
        <Label x:Name="lblSekunden" Content="---" HorizontalAlignment="Left" VerticalAlignment="Top" Width="147" Margin="350,20,0,0" Background="#FFBAF5EB" Height="25"/>
        <Label x:Name="lblTotalTagen" Content="---" HorizontalAlignment="Left" VerticalAlignment="Top" Width="147" Margin="350,247,0,0" Background="#FFBAF5EB" Height="25"/>
        <Label x:Name="label_Copy1" Content="Tagen (Total)" HorizontalAlignment="Left" Margin="210,247,0,0" VerticalAlignment="Top" Width="103" Height="25"/>
        <Label x:Name="lblTotalStunden" Content="---" HorizontalAlignment="Left" VerticalAlignment="Top" Width="147" Margin="350,178,0,0" Background="#FFBAF5EB" Height="25"/>
        <Label x:Name="label1_Copy1" Content="Stunden (Total)" HorizontalAlignment="Left" Margin="210,178,0,0" VerticalAlignment="Top" Width="103" Height="25"/>
        <Label x:Name="lblTotalMinuten" Content="---" HorizontalAlignment="Left" VerticalAlignment="Top" Width="147" Margin="350,114,0,0" Background="#FFBAF5EB" Height="25"/>
        <Label x:Name="label_Copy2" Content="Minuten (Total)" HorizontalAlignment="Left" Margin="210,114,0,0" VerticalAlignment="Top" Width="103" Height="25"/>
        <Label x:Name="label1_Copy2" Content="Sekunden (Total)" HorizontalAlignment="Left" Margin="210,50,0,0" VerticalAlignment="Top" Width="119" Height="25"/>
        <Label x:Name="lblTotalSekunden" Content="---" HorizontalAlignment="Left" VerticalAlignment="Top" Width="147" Margin="350,50,0,0" Background="#FFBAF5EB" Height="25"/>
        <Label x:Name="lblTestVonMac" Content="---" HorizontalAlignment="Left" VerticalAlignment="Top" Width="475" Margin="22,281,0,0" Background="#FFF0F5BA" Height="25" Foreground="#FFF50E0E" FontWeight="ExtraBold"/>
