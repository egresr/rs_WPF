        <Label x:Name="label_Copy" Content="Minuten" HorizontalAlignment="Left" Margin="224,68,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label1_Copy" Content="Stunden" HorizontalAlignment="Left" Margin="224,109,0,0" VerticalAlignment="Top"/>
